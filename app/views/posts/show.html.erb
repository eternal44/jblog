
<div class="row">
  <br>
  <div class="col-md-2 col-sm-3 text-center">
    <a class="story-img" href="#"><img src="//placehold.it/100" style="width:100px;height:100px" class="img-circle"></a>
  </div>
  <div class="col-md-10 col-sm-9">
  <h3><%= @post.title %></h3>
    <div class="row">
      <div class="col-xs-9">
        <p><%= sanitize @post.text, tags: %w(strong img h4 br p div ul li a script) %></p>

        <ul class="list-inline">
          <li><%= "Published at #{@post.published_at}" %></li>
          <li><i class="glyphicon glyphicon-comment"></i><%= @post.comments.count %> Comments</li>
        </ul>

        <% if policy(Post).edit? %>
          <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
        <% end %>
        <% if policy(Post).destroy? %>
          <%= link_to "Destroy", post_path(@post), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?' }%>
        <% end %>
        <br>
        <br>
        <%= link_to 'Back', 'javascript:history.go(-1);' %>
      </div>
            <div class="col-xs-3"></div>
    </div>
    <%= render partial: "shared/comments/form", locals: {commentable: @post } %>
    <%= render partial: "shared/comments/comments", locals: {commentable: @post } %>
    <br><br>
  </div>
</div>
<hr>

