
<div class="row">
  <br>
  <div class="col-md-12 col-sm-12">
  <h3><%= @post.title %></h3>
    <div class="row">
      <div class="col-xs-9">
        <%= image_tag @post.photo.url %>
        <br />
        <br />
        <p><%= sanitize @post.text, tags: %w(strong img h4 br p div ul li a script) %></p>

        <ul class="list-inline">
          <li><a href="#"><%= time_ago_in_words(@post.created_at)%> ago</a></li>
          <li><a href="#"><i class="glyphicon glyphicon-comment"></i><%= @post.comments.count %> Comments</a></li>
        </ul>

        <% if policy(Post).edit? %>
          <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
        <% end %>
        <% if policy(Post).destroy? %>
          <%= link_to "Destroy", post_path(@post), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?' }%>
        <% end %>
        <br>
        <br>
        <%= link_to 'Back', 'javascript:history.go(-1);' %>
      </div>
            <div class="col-xs-3"></div>
    </div>
    <%= render partial: "shared/comments/comments", locals: {commentable: @post } %>
    <%= render partial: "shared/comments/form", locals: {commentable: @post } %>
    <br><br>
  </div>
</div>
<hr>

