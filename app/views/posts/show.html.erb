<%= @hello %>
<div class="row">    
  <br>
  <div class="col-md-2 col-sm-3 text-center">
    <a class="story-img" href="#"><img src="//placehold.it/100" style="width:100px;height:100px" class="img-circle"></a>
  </div>
  <div class="col-md-10 col-sm-9">
  <h3><%= @post.title %></h3>
    <div class="row">
      <div class="col-xs-9">
        <p><%= sanitize @post.text %></p>
        <p class="pull-right"><span class="label label-default">keyword</span> <span class="label label-default">tag</span> <span class="label label-default">post</span></p>
        <ul class="list-inline">
          <li><a href="#">2 Days Ago</a></li>
          <li><a href="#"><i class="glyphicon glyphicon-comment"></i> 4 Comments</a></li>
          <li><a href="#"><i class="glyphicon glyphicon-share"></i> 34 Shares</a></li>
        </ul>
        <% if policy(Post).edit? %>
          <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
        <% end %>
        <% if policy(Post).destroy? %>
          <%= link_to "Destroy", post_path(@post), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?' }%>
        <% end %>
        <%# <td><%= link_to "Destroy", group_path(group), method: :delete, data: {confirm: 'Are you sure?' } %1></td> %>
      </div>
            <div class="col-xs-3"></div>
    </div>
    <%= render partial: "shared/comments/form", locals: {commentable: @post } %>
    <%= render partial: "shared/comments/comments", locals: {commentable: @post } %>
    <br><br>
  </div>
</div>
<hr>

